<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alert_layoutnearbyhouse">
    <data>
        <import type="android.view.View"/>
    </data>

    <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:layout_marginTop="5dp">

                <ImageView
                        android:id="@+id/back_button"
                        android:src="@drawable/ic_house_chimney_crack_solid"
                        android:backgroundTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/back_arrow"/>
                <TextView
                        android:id="@+id/existing_pr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/household_level_se_survey"
                        android:textAppearance="@style/nearby_house_alert_header"
                />
            </LinearLayout>

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="19dp"
                    android:id="@+id/ivClose"
                    app:srcCompat="@drawable/ic_close"/>
        </LinearLayout>

        <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/alert_divider"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginEnd="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <EditText

                        android:imeOptions="flagNoExtractUi"
                        android:id="@+id/getHouseInput"
                        android:paddingStart="5dp"
                        android:background="@drawable/searchiconbckgn"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="0dp"/>

                <RelativeLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/imageviewback"
                        tools:ignore="RtlHardcoded">
                    <ImageView
                            android:id="@+id/searchHouse"
                            android:layout_gravity="center"
                            android:padding="6dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_marginEnd="7.5dp"
                            android:layout_width="15dp"
                            android:layout_height="16dp"
                            android:background="@drawable/searchiconhouse"
                    />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/show_nearby_button"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:textColor="@color/selected_grey"
                    android:textFontWeight="700"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="@string/find_automa"
                    android:textAppearance="@style/find_automa"
            />

            <TextView
                    android:id="@+id/show_all_button"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/button_blue"
                    android:textFontWeight="700"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="@string/show_complete_list"
            />

            <TextView
                    android:id="@+id/add_household"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="#0084FF"
                    android:textFontWeight="700"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:text="Add New"
            />
        </LinearLayout>

        <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/based_on_yo"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="@string/based_on_yo"
                android:textAppearance="@style/based_on_yo"
                android:gravity="top"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
            <TextView
                    android:text="@string/hh_number"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="Name of the HouseHead"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:gravity="center_horizontal"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="No of members"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="GPS Location"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"/>
            <TextView android:textSize="14sp"
                      android:text="Saved On"
                      android:textColor="#000"
                      android:layout_weight="3"
                      android:layout_gravity="center"
                      android:gravity="center_horizontal"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"/>
            <TextView android:textSize="14sp"
                      android:text="Action"
                      android:textColor="#000"
                      android:layout_weight="4"
                      android:layout_gravity="center"
                      android:gravity="center_horizontal"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
                android:id="@+id/llbuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="#fafafa"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="#cacaca"/>
            <TextView
                    android:id="@+id/complete_survey"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0084FF"
                android:visibility="invisible"
                    android:text="@string/complete_survey"/>
        </LinearLayout>

    </LinearLayout>
</layout>