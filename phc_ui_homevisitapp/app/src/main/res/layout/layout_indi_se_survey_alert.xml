<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alert_layoutnearbyhouse"

>
    <data>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:layout_marginTop="5dp">

                <ImageView
                        android:id="@+id/back_button"
                        android:src="@drawable/ic_house_chimney_crack_solid"
                        android:backgroundTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/back_arrow"/>
                <TextView
                        android:id="@+id/existing_pr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual Level Socio Economic Survey"
                        android:textAppearance="@style/nearby_house_alert_header"
                />
            </LinearLayout>

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="19dp"
                    android:id="@+id/ivClose"
                    app:srcCompat="@drawable/ic_close"/>
        </LinearLayout>
        <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/alert_divider"/>
        <androidx.core.widget.NestedScrollView
                android:id="@+id/scroller"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <LinearLayout
                    android:id="@+id/survey_form_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:padding="10dp"
                android:gravity="end|center_vertical"
                android:elevation="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#646464"
                    android:layout_marginEnd="20dp"
                    android:text="@string/cancel"/>

            <LinearLayout
                    android:id="@+id/save_survey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0085FF"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_floppy_disk_solid"
                        android:layout_marginEnd="5dp"/>
                <TextView
                        android:text="@string/save_changes"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>