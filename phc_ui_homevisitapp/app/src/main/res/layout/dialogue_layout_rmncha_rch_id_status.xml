<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".rmncha.ec.selectspouse.SelectSpouseForECActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.ssf.homevisit.rmncha.ec.selectspouse.SelectSpouseForECViewModel" />
    </data>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close_dialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_close" />

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_loading" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:text="RCH - ID is being generated..."
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please wait"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/alert_divider" />

        <TextView
            android:id="@+id/click_to_continue"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/save_and_continue"
            android:textAppearance="@style/footer_save_and_continue_button_style"
            android:textStyle="bold"
            app:drawableRightCompat="@drawable/ic_next_button" />

    </LinearLayout>
</layout>