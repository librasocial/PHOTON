<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".rmncha.ec.selectspouse.SelectSpouseForECActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/main_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/baby_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Baby 1 of Laksmamma"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Enter Child ID"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:paddingEnd="5dp"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_text_child_id"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/alert_phc_other"
                        android:gravity="center"
                        android:hint="000000000000"
                        android:imeOptions="actionDone|flagNoFullscreen"
                        android:inputType="number"
                        android:maxLength="12"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Last ANC visit"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_anc_visit_date"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_rounder_corner_half_white"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:singleLine="true"
                        android:text="2022/05/20"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="LMP date"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_lmp_date"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_rounder_corner_half_white"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:singleLine="true"
                        android:text="2022/05/20"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="EDD date"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_edd_date"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_rounder_corner_half_white"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:singleLine="true"
                        android:text="2022/05/22"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Date of registration"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_view_registration_date"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/alert_phc_other"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:hint="YYYY/MM/DD"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/ic_calendar_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Date of birth"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_view_dob"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_rounder_corner_half_white"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:singleLine="true"
                        android:text="2022/10/23"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Financial year"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_view_financial_year"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_rounder_corner_half_white"
                        android:gravity="left|center"
                        android:paddingStart="5dp"
                        android:singleLine="true"
                        android:text="2022-23"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Infant term"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_view_infant_term"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_rounder_corner_half_white"
                            android:gravity="left|center"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Sex of infant"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_infant_sex"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Birth weight (kg)"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/infant_weight"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:hint="Type"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Any defect seen at birth"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_any_defect"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:lines="2"
                                android:text="Did the baby cry immediately at birth?"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:gravity="bottom"
                                android:singleLine="true"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_did_baby_cry"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:text="Was resuscitation done?"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_resuscitation_done"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:entries="@array/array_yes_no"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:text="Breast feeding started within 1 hour of delivery"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_feeding_started"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:text="Referred to higher facility for further management"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_referred"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_weight="1"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Immunization"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="OPV-0 dose"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_view_opv_date"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:hint="YYYY/MM/DD"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="14sp"
                            app:drawableEndCompat="@drawable/ic_calendar_black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="BCG dose"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_view_bcg_date"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:hint="YYYY/MM/DD"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="14sp"
                            app:drawableEndCompat="@drawable/ic_calendar_black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="HEP B-0 dose"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_view_hep_date"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:hint="YYYY/MM/DD"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="14sp"
                            app:drawableEndCompat="@drawable/ic_calendar_black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="VIT-K dose"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_view_vit_date"
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alert_phc_other"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:hint="YYYY/MM/DD"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="14sp"
                            app:drawableEndCompat="@drawable/ic_calendar_black" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_previous"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Previous"
                android:textColor="@color/button_blue"
                android:textSize="20sp"
                app:drawableLeftCompat="@drawable/ic_back_button_blue" />

            <TextView
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Next"
                android:textColor="@color/button_blue"
                android:textSize="20sp"
                app:drawableRightCompat="@drawable/ic_next_button" />

            <ImageButton
                android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_submit_button"
                android:contentDescription="@string/submit" />

        </LinearLayout>

    </LinearLayout>

</layout>