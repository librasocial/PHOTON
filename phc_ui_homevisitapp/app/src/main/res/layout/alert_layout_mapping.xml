<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/alert_layoutmapping"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="531dp"
        android:layout_height="422dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/mapping_alert_layout_bg" tools:ignore="UselessParent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/popup_heade"
                        android:textAppearance="@style/popup_heade"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="19dp"
                    android:id="@+id/ivClose"
                    app:srcCompat="@drawable/ic_close" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/alert_divider"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_phc"
                            android:textAppearance="@style/select_phc"/>

                    <LinearLayout
                            android:id="@+id/spinnerPhcContainer"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/alert_phc_bg">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:id="@+id/spinnerPhc"
                            android:entries="@array/select_phc"
                            android:layout_marginStart="0dp"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                    <ProgressBar
                            android:id="@+id/phc_loader_progress_bar"
                            android:layout_width="30dp"
                            android:progress="0"
                            android:max="100"
                            android:layout_alignTop="@id/spinnerPhcContainer"
                            android:layout_alignBottom="@+id/spinnerPhcContainer"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:visibility="gone"
                            android:layout_height="0dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                            android:textStyle="bold"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:text="@string/select_subcenter"
                            android:textAppearance="@style/select_phc"/>
                    <LinearLayout
                        android:id="@+id/spinnerPhcContainerContainer"
                        android:layout_alignParentEnd="true"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/alert_phc_other">
                        <Spinner
                            android:textSize="12sp"
                            android:layout_width="250dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:id="@+id/spinSubCenter"/>
                    </LinearLayout>

                    <ProgressBar
                            android:id="@+id/subcenter_loader_progress_bar"
                            android:layout_width="30dp"
                            android:progress="0"
                            android:max="100"
                            android:layout_alignTop="@id/spinnerPhcContainerContainer"
                            android:layout_alignBottom="@+id/spinnerPhcContainerContainer"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:layout_height="0dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:text="@string/select_village"
                            android:textAppearance="@style/select_phc"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="27dp"
                        android:text="@string/select_village"
                        android:textAppearance="@style/select_phc" />
                        <LinearLayout
                                android:id="@+id/spinVillageContainer"
                            android:layout_width="250dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="20dp"
                                android:layout_alignParentEnd="true"
                            android:background="@drawable/alert_phc_other">
                            <Spinner
                                    android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:id="@+id/spinVillage"/>
                        </LinearLayout>

                    <ProgressBar
                            android:id="@+id/village_loader_progress_bar"
                            android:layout_width="30dp"
                            android:progress="0"
                            android:max="100"
                            android:layout_alignTop="@id/spinVillageContainer"
                            android:layout_alignBottom="@+id/spinVillageContainer"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_height="0dp"/>

                </RelativeLayout>
                <LinearLayout
                        android:layout_gravity="end"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="70dp"
                        android:id="@+id/llCheckbox"
                        android:orientation="horizontal">
                    <CheckBox
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/checkbox"
                            android:checked="false"/>
                    <TextView
                            android:id="@+id/data_already_exists_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/already_exist"
                            android:textAppearance="@style/already_exist"
                            android:layout_marginStart="20dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/alert_divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textAppearance="@style/cancel"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnCancel"
                    android:layout_marginStart="20dp" />
                <ImageButton
                        android:layout_width="142dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/btnStartMap"
                        android:background="@drawable/ic_start_mapping"
                        android:contentDescription="@string/start_mapping"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>