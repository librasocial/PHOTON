<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivSpinnerImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/app_name"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/checkSpinnerItem"
        app:layout_constraintTop_toTopOf="@+id/checkSpinnerItem" />

    <TextView
        android:id="@+id/tvSpinnerContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Fever"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/checkSpinnerItem"
        app:layout_constraintStart_toEndOf="@+id/checkSpinnerItem"
        app:layout_constraintTop_toTopOf="@+id/checkSpinnerItem" />

    <CheckBox
        android:id="@+id/checkSpinnerItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>