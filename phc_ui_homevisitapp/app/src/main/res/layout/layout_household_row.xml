<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <TextView
                    android:id="@+id/lgdcode001"
                    android:text="LGDCODE 001"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/householdname"
                    android:text="Ramappa"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/familymem"
                    android:text="3"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/latlng001"
                    android:minWidth="100dp"
                    android:textSize="14sp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/time"
                    android:textSize="14sp"
                    android:text="10.25am"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:id="@+id/editdata"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3">
                <ImageView
                        android:id="@+id/edit_data_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_list_check_solid"
                        app:tint="#0084FF"/>
                <TextView
                        android:id="@+id/edit_data_text"
                        android:text="@string/perform_hh_se_survey"
                        android:layout_weight="2"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:textColor="#0084FF"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
        <View
                android:id="@+id/line_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/drawableline8"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cacaca"/>
</LinearLayout>