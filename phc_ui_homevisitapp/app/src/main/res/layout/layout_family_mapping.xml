<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alert_familymapping"
>
    <data>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:layout_marginTop="5dp">

                <ImageView
                        android:id="@+id/back_button"
                        android:src="@drawable/ic_house_chimney_crack_solid"
                        android:backgroundTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/back_arrow"/>
                <TextView
                        android:id="@+id/existing_pr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual Level Socio Economic Survey"
                        android:textAppearance="@style/nearby_house_alert_header"
                />
            </LinearLayout>

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="19dp"
                    android:id="@+id/ivClose"
                    app:srcCompat="@drawable/ic_close"/>
        </LinearLayout>
        <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/alert_divider"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/kitchen_icon"
                        android:src="@drawable/ic_diagram_project_solid"
                        android:backgroundTint="@color/white"
                        style="@style/hhses_icons"
                        android:contentDescription="@string/back_arrow"/>

                <TextView
                        android:id="@+id/kitchen"
                        style="@style/hhses_title_style"
                        android:text="@string/family_mapping"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/head_of_family"/>

                <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/name_of_residents"/>

                <TextView
                        android:layout_width="250dp"
                        android:layout_marginStart="40dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/relationship_status"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/edit_bg">
                    <TextView
                            android:id="@+id/name_of_house_head"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>

                    <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_user_solid"
                            android:backgroundTint="#cacaca"/>
                </LinearLayout>
                <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:id="@+id/mapping_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="5dp"
                            android:orientation="vertical"/>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:padding="10dp"
                android:gravity="end|center_vertical"
                android:elevation="4dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#646464"
                    android:layout_marginEnd="20dp"
                    android:text="@string/cancel"/>

            <LinearLayout
                    android:id="@+id/save_survey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0085FF"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_floppy_disk_solid"
                        android:layout_marginEnd="5dp"/>
                <TextView
                        android:text="@string/save_changes"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>