<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/llParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_household_number"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="start"
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="#575757"
                android:textSize="16sp"
                tools:text="LGD-Code 001" />

            <TextView
                android:id="@+id/tv_household_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.17"
                android:lines="2"
                android:layout_marginStart="25dp"
                android:gravity="start|center_vertical"
                android:textColor="#575757"
                android:textSize="16sp"
                android:text="----------" />

            <TextView
                android:id="@+id/tv_number_members"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textColor="#575757"
                android:textSize="16sp"
                tools:text="3" />

            <TextView
                android:id="@+id/tv_action"
                android:layout_width="0dp"
                android:layout_marginStart="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".6"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start|center_vertical"
                android:lines="2"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="#0084FF"
                android:textSize="13sp"
                tools:text="Perform Larva Surveillance" />

        </LinearLayout>

        <View
            android:id="@+id/vw"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="16dp"
            android:background="#CACACA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llParent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>