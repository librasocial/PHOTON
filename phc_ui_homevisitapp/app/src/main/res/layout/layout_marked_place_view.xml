<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp">

    <View
            android:layout_alignParentStart="true"
            android:id="@+id/pointer_view"
            android:background="@drawable/filled_circle"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
    />
    <TextView
            android:layout_toEndOf="@+id/pointer_view"
            android:id="@+id/asset_type_text"
            android:hint="@string/temple"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

    <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/asset_count_text"
            android:hint="@string/_10"
            android:gravity="end"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
    />

</RelativeLayout>