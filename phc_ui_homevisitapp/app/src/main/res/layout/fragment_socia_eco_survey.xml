<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragment.SociaEcoSurveyFragment">
    <data>
        <import type="android.view.View"/>
        <variable name="viewModel" type="com.ssf.homevisit.viewmodel.VillageLevelMappingViewModel"/>
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/map"/>
        <LinearLayout
                android:id="@+id/status_dialog"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/village_summary_background"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="10dp"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/back_button"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:src="@drawable/back_arrow"
                        android:backgroundTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/back_arrow"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#0084FF"
                        android:text="@string/back"
                />
            </LinearLayout>
            <View
                    android:layout_marginHorizontal="15dp"
                    android:foreground="#e0e0e0"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            <TextView
                    android:layout_marginStart="15dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/phc_name_text"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@={viewModel.phcName}"
                    android:textColorHint="@color/black"
                    android:layout_width="wrap_content"
                    android:hint="@string/public_health_center_name"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginStart="15dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/subcenter_text"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:text="@={viewModel.subCenterName}"
                    android:layout_width="wrap_content"
                    android:hint="@string/subcenter_number_1"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginStart="15dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/village_text"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#333333"
                    android:hint="@string/mayasandra"
                    android:text="@={viewModel.villageName}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_marginHorizontal="15dp"
                    android:foreground="#e0e0e0"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            <TextView
                    android:layout_marginStart="15dp"
                    android:layout_marginVertical="5dp"
                    android:textSize="13sp"
                    android:textColor="#4f4f4f"
                    android:text="@string/marked_places"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                <LinearLayout
                        android:id="@+id/marked_places_container"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </ScrollView>

            <View
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="15dp"
                    android:foreground="#e0e0e0"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>
            <RelativeLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginVertical="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4f4f4f"
                        android:text="@string/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/total_count_text"
                        android:layout_marginVertical="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4f4f4f"
                        android:layout_marginEnd="16dp"
                        android:text="22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>