<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.PrimaryDataListFrag">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
                android:layout_above="@+id/llbuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:id="@+id/llHeadings">
            <TextView
                    android:id="@+id/existing_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/existing_pr"
                    android:textAppearance="@style/existing_pr"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="24dp"
            />
            <TextView
                    android:id="@+id/public_heal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/public_heal"
                    android:textAppearance="@style/public_heal"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
            />
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="50dp"
                    android:divider="#CACACA"
                    android:dividerHeight="1dp"
                    android:id="@+id/list"
                    android:layout_marginTop="19dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="50dp"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="296dp"
                android:layout_height="60dp"
                android:background="@drawable/save_incomplete_btn">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/incomplete"
                    android:textAppearance="@style/save_incomp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="243dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/complete_mapping_btn">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/complete_map"
                    android:textAppearance="@style/complete_map"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>