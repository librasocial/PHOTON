<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    android:background="@drawable/female_ec_program"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ecPhoto"
            android:layout_width="133.46dp"
            android:layout_height="146.39dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/female_ec_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ecName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laksmamma"
                android:textColor="#000"
                android:textSize="24px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ecAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="35years - Female"
                android:textColor="#646464"
                android:textSize="24px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ecPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ph : 98450 98450"
                android:textColor="#646464"
                android:textSize="24px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ecDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DOB : 12/08/1986"
                android:textColor="#646464"
                android:textSize="24px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ecStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Status : Resident"
                android:textColor="#000"
                android:textSize="24px"
                android:textStyle="bold" />
        </LinearLayout>
</LinearLayout>
    <TextView android:id="@+id/ecHealthId" android:textColor="#000" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Health ID number : 77-7146-0314-8894"
              android:textSize="24px" android:textStyle="bold"/>

</LinearLayout>