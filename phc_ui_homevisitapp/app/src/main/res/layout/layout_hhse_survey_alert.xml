<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_layoutnearbyhouse"

    >

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.ssf.homevisit.viewmodel.HHSESurveyAlertViewModel" />
    </data>

    <LinearLayout
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:layout_marginTop="5dp">

                <ImageView
                        android:id="@+id/back_button"
                        android:src="@drawable/ic_house_chimney_crack_solid"
                        android:backgroundTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/back_arrow"/>
                <TextView
                        android:id="@+id/existing_pr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/household_level_se_survey"
                        android:textAppearance="@style/nearby_house_alert_header"
                />
            </LinearLayout>

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="19dp"
                    android:id="@+id/ivClose"
                    app:srcCompat="@drawable/ic_close"/>
        </LinearLayout>
        <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/alert_divider"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <RelativeLayout
                            android:layout_marginVertical="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="88"
                            android:padding="10dp"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/hi_houseicon"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/ic_house_chimney_crack_solid"
                                android:backgroundTint="@color/white"
                                style="@style/hhses_icons"
                                android:contentDescription="@string/back_arrow"/>

                        <TextView
                                android:id="@+id/hh_information_tv"
                                android:layout_toEndOf="@+id/hi_houseicon"
                                android:layout_alignTop="@+id/hi_houseicon"
                                android:layout_height="wrap_content"
                                style="@style/hhses_title_style"
                                android:text="@string/household_information"/>

                        <View
                                android:id="@+id/hh_indo_divider"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="5dp"
                                android:background="@color/alert_divider"
                                android:layout_alignTop="@id/hh_information_tv"
                                android:layout_alignBottom="@id/hh_information_tv"
                                android:layout_toEndOf="@id/hh_information_tv"/>

                        <TextView
                                android:id="@+id/hh_number_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/hh_indo_divider"
                                android:gravity="center_vertical"
                                android:textSize="14sp"
                                android:textColor="#333"
                                android:layout_alignTop="@id/hh_indo_divider"
                                android:layout_alignBottom="@id/hh_indo_divider"
                                android:text="@string/hh_number_"/>

                        <TextView
                                android:id="@+id/hh_number_value_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:textSize="15sp"
                                android:layout_toEndOf="@id/hh_number_text"
                                android:gravity="center_vertical"
                                android:textColor="#333"
                                android:layout_alignTop="@id/hh_indo_divider"
                                android:layout_alignBottom="@id/hh_indo_divider"/>

                        <TextView
                                android:id="@+id/photo_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Photo"
                                android:layout_below="@id/hi_houseicon"
                                style="@style/hh_survey_qt"/>

                        <ImageView
                            android:id="@+id/photo_iv"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/photo_text"
                            android:layout_marginEnd="10dp"
                            android:background="#666"
                            android:src="@drawable/progress_animation" />

                        <TextView
                                android:id="@+id/name_of_hh_qt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name of Resident*"
                                android:layout_below="@id/hi_houseicon"
                                android:layout_toEndOf="@id/photo_iv"
                                android:layout_alignTop="@id/photo_text"
                                style="@style/hh_survey_qt"/>
                        <LinearLayout
                                android:id="@+id/househead_container"
                                android:layout_width="0dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="5dp"
                                android:layout_alignStart="@+id/name_of_hh_qt"
                                android:layout_toStartOf="@id/is_head_cb"
                                android:layout_below="@+id/name_of_hh_qt"
                                android:background="@drawable/edit_bg">

                            <TextView
                                    android:hint="@string/emptystring"
                                    android:id="@+id/houseHeadName"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="35dp"
                                    android:background="@null"
                                    android:focusableInTouchMode="true"
                                    android:singleLine="true"
                                    android:textAppearance="@style/LoginText"
                                    android:autofillHints="username"/>
                        </LinearLayout>

                        <CheckBox
                                android:id="@+id/is_head_cb"
                                android:layout_marginStart="10dp"
                                android:layout_toStartOf="@+id/is_head_text"
                                android:layout_width="30dp"
                                android:checked="true"
                                android:clickable="false"
                                android:layout_marginEnd="2dp"
                                android:layout_alignTop="@id/househead_container"
                                android:layout_alignBottom="@+id/househead_container"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/is_head_text"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:gravity="center_vertical"
                                android:layout_alignTop="@id/househead_container"
                                android:layout_alignBottom="@+id/househead_container"
                                android:text="@string/is_head_of_the_family"
                                android:textSize="10sp"
                                android:textColor="#646464"
                                android:layout_alignParentEnd="true"/>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentEnd="true"
                                android:layout_alignStart="@+id/househead_container"
                                android:layout_below="@+id/househead_container">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/type_of_family"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/head_religion"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/head_category"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/mother_tongue"
                                    android:layout_width="0dp"
                                    android:layout_margin="2dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/alert_divider"/>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <ImageView
                                    android:id="@+id/kit_medical"
                                    android:src="@drawable/ic_kit_medical_solid"
                                    android:backgroundTint="@color/white"
                                    style="@style/hhses_icons"
                                    android:contentDescription="@string/back_arrow"/>

                            <TextView
                                    style="@style/hhses_title_style"
                                    android:text="@string/healthcare_info_and_preferance"/>
                        </LinearLayout>

                        <com.ssf.homevisit.views.SESQuestionResponseView
                                android:id="@+id/health_worker_visit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <com.ssf.homevisit.views.SESQuestionResponseView
                                android:id="@+id/health_care_facility"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/alert_divider"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_marginVertical="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <ImageView
                                    android:id="@+id/location_info_icon"
                                    android:src="@drawable/ic_location_dot_solid"
                                    android:backgroundTint="@color/white"
                                    style="@style/hhses_icons"
                                    android:contentDescription="@string/back_arrow"/>

                            <TextView
                                    android:id="@+id/location_info"
                                    style="@style/hhses_title_style"
                                    android:text="@string/physical_location_info"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/location_of_hh"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/type_of_road"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                        </LinearLayout>

                        <com.ssf.homevisit.views.SESQuestionResponseView
                                android:id="@+id/appropriate_option_of_hh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/alert_divider"/>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <ImageView
                                    android:id="@+id/houseic"
                                    android:src="@drawable/ic_house_icon"
                                    android:backgroundTint="@color/white"
                                    style="@style/hhses_icons"
                                    android:contentDescription="@string/back_arrow"/>

                            <TextView
                                    style="@style/hhses_title_style"
                                    android:text="@string/house_ownership_info"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/house_ownership"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/type_of_house"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/living_rooms"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:orientation="horizontal">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/cross_ventilation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/electricity"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/alert_divider"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_marginVertical="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="44"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <ImageView
                                    android:id="@+id/kitchen_icon"
                                    android:src="@drawable/ic_utensils_solid"
                                    android:backgroundTint="@color/white"
                                    style="@style/hhses_icons"
                                    android:contentDescription="@string/back_arrow"/>

                            <TextView
                                    android:id="@+id/kitchen"
                                    style="@style/hhses_title_style"
                                    android:text="Kitchen"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/kitchen_type"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/smoke_vent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:orientation="horizontal">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/fuel_used"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/alert_divider"/>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="34"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <ImageView
                                    android:id="@+id/water_src_icon"
                                    android:src="@drawable/ic_faucet_solid"
                                    android:backgroundTint="@color/white"
                                    style="@style/hhses_icons"
                                    android:contentDescription="@string/back_arrow"/>

                            <TextView
                                    style="@style/hhses_title_style"
                                    android:text="Water Source"/>
                        </LinearLayout>

                        <com.ssf.homevisit.views.SESQuestionResponseView
                                android:id="@+id/drinking_water"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <com.ssf.homevisit.views.SESQuestionResponseView
                                android:id="@+id/everyday_use"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/alert_divider"/>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <ImageView
                                    android:id="@+id/sanitation_icon"
                                    android:src="@drawable/ic_shower_solid"
                                    android:backgroundTint="@color/white"
                                    style="@style/hhses_icons"
                                    android:contentDescription="@string/back_arrow"/>

                            <TextView
                                    style="@style/hhses_title_style"
                                    android:text="@string/sanitation"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/bathing_area"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/drainage_system"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:orientation="horizontal">
                            <com.ssf.homevisit.views.SESQuestionResponseView
                                    android:id="@+id/toilet_facility"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/alert_divider"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:padding="10dp"
                android:gravity="end|center_vertical"
                android:elevation="4dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#646464"
                    android:layout_marginEnd="20dp"
                    android:text="@string/cancel"/>

            <TextView
                    android:id="@+id/save_and_do_resident"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/button_blue"
                    android:layout_marginEnd="20dp"
                    android:text="@string/save_and_perform_resident_survey"/>

            <LinearLayout
                    android:id="@+id/save_survey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0085FF"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_floppy_disk_solid"
                        android:layout_marginEnd="5dp"/>
                <TextView
                        android:text="@string/save_changes"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>